{
  "name": "DreamVault - AI-Powered Dream Journal",
  "short_name": "DreamVault",
  "description": "Record, analyze, and understand your dreams with advanced AI insights",
  "start_url": "/",
  "id": "dreamvault-app",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#6366f1",
  "theme_color": "#6366f1",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["health", "lifestyle", "productivity"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "protocol_handlers": [
    {
      "protocol": "web+dreamvault",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "icons": [
    {
      "src": "https://picsum.photos/192/192?random=1",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://picsum.photos/192/192?random=2",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "https://picsum.photos/512/512?random=3",
      "sizes": "512x512", 
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://picsum.photos/512/512?random=4",
      "sizes": "512x512", 
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "https://picsum.photos/390/844?random=5",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dream Journal Interface"
    },
    {
      "src": "https://picsum.photos/1024/593?random=6",
      "sizes": "1024x593",
      "type": "image/png", 
      "form_factor": "wide",
      "label": "Dream Analytics Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Add Dream",
      "short_name": "Add Dream", 
      "description": "Record a new dream",
      "url": "/?view=add",
      "icons": [
        {
          "src": "https://picsum.photos/96/96?random=7",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Analytics",
      "short_name": "Analytics", 
      "description": "View dream analytics and insights",
      "url": "/?view=analytics",
      "icons": [
        {
          "src": "https://picsum.photos/96/96?random=8",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "scope_extensions": [
    {"origin": "https://dreamvault-app.vercel.app"}
  ],
  "widgets": [
    {
      "name": "Dream Streak",
      "description": "Shows current dream recording streak",
      "tag": "dream-streak",
      "template": "dream-streak-template",
      "ms_ac_template": "adaptive-card.json",
      "data": "widgets/dream-streak.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "https://picsum.photos/280/120?random=9",
          "sizes": "280x120",
          "label": "Dream streak widget"
        }
      ]
    }
  ]
}
